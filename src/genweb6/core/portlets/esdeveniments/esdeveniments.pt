<div class="portlet portlet-esdeveniments portlet-list"
     tal:define="events view/published_events_expanded"
     tal:condition="events"
     i18n:domain="plone">

    <h2 class="portlet-title" i18n:domain="genweb"
        i18n:translate="genweb-agenda">Agenda</h2>

    <ul class="list-group list-group-flush mb-2">

        <tal:item tal:repeat="event events">

            <li tal:attributes="class string:list-group-item ps-0 ${event/class_li}">

                <a tal:attributes="href event/url;
                                   title event/title;
                                   class string:d-block text-decoration-none ${event/class_a}">

                    <span tal:replace="event/title">Title</span>

                </a>

                <time class="smaller" tal:content="event/date">01/01/2022</time>

            </li>

        </tal:item>

    </ul>

    <div class="portlet-footer">

        <a class="portlet-show-more small text-decoration-none" tal:attributes="href string:${view/all_events_link}/aggregator/RSS">
            <i class="bi bi-rss"></i>
        </a>

        <a class="portlet-show-more small text-decoration-none" tal:attributes="href view/all_events_link">
            <span i18n:domain="genweb" i18n:translate="box_upcoming_events">MÃ©s esdeveniments</span>
        </a>

    </div>

</div>

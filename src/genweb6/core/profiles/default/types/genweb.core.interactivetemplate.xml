<?xml version="1.0"?>
<object name="genweb.core.interactivetemplate" meta_type="Dexterity FTI" i18n:domain="plone"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n">

    <property name="title" i18n:translate="interactivetemplate">Interactive template</property>
    <property name="description" i18n:translate=""></property>
    <property name="icon_expr">string:layout-wtf</property>
    <property name="allow_discussion">False</property>
    <property name="global_allow">True</property>
    <property name="filter_content_types">True</property>
    <property name="allowed_content_types">
        <element value="Document"/>
        <element value="genweb.upc.documentimage"/>
        <element value="Image"/>
    </property>

    <property name="schema">genweb6.core.content.interactive_template.interactive_template.IInteractiveTemplate</property>
    <property name="klass">genweb6.core.content.interactive_template.interactive_template.InteractiveTemplate</property>
    <property name="add_permission">cmf.AddPortalContent</property>
    <property name="factory">genweb.core.interactivetemplate</property>
    <property name="link_target"></property>
    <property name="immediate_view">view</property>
    <property name="add_view_expr">string:${folder_url}/++add++genweb.core.interactivetemplate</property>
    <property name="schema_policy">dexterity</property>

    <property name="behaviors">
        <element value="plone.translatable" />
        <element value="plone.dublincore" />
        <element value="plone.namefromtitle" />
        <element value="plone.shortname" />
        <element value="plone.excludefromnavigation" />
        <element value="plone.locking" />
    </property>

    <property name="default_view">view</property>
    <property name="default_view_fallback">False</property>

    <alias from="(Default)" to="(dynamic view)"/>
    <alias from="edit" to="@@edit"/>
    <alias from="sharing" to="@@sharing"/>
    <alias from="view" to="(selected layout)"/>

    <action title="View" action_id="view" category="object" condition_expr=""
            description="" icon_expr="" link_target="" url_expr="string:${object_url}"
            visible="True">

        <permission value="View"/>
    </action>

    <action title="Edit" action_id="edit" category="object" condition_expr=""
            description="" icon_expr="" link_target=""
            url_expr="string:${object_url}/edit" visible="True">

        <permission value="Modify portal content"/>
    </action>

</object>

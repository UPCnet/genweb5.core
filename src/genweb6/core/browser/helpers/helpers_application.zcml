<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="genweb">

    <browser:page
        name="ping"
        for="OFS.interfaces.IApplication"
        class=".helpers_application.ping"
        permission="zope2.View"
        />

    <browser:page
        name="list_plone_sites"
        for="OFS.interfaces.IApplication"
        class=".helpers_application.list_plone_sites"
        permission="zope2.View"
        />

    <browser:page
        name="get_flavour_sites"
        for="OFS.interfaces.IApplication"
        class=".helpers_application.get_flavour_sites"
        permission="zope2.View"
        />

    <browser:page
        name="get_languages_sites"
        for="OFS.interfaces.IApplication"
        class=".helpers_application.get_languages_sites"
        permission="zope2.View"
        />

    <browser:page
        name="get_default_language_sites"
        for="OFS.interfaces.IApplication"
        class=".helpers_application.get_default_language_sites"
        permission="zope2.View"
        />

    <browser:page
        name="get_default_wfsites"
        for="OFS.interfaces.IApplication"
        class=".helpers_application.get_default_wfsites"
        permission="zope2.View"
        />

    <browser:page
        name="bulk_action"
        for="OFS.interfaces.IApplication"
        class=".helpers_application.bulk_action"
        permission="cmf.ManagePortal"
        />

    <browser:page
        name="nsp_bulk_action"
        for="OFS.interfaces.IApplication"
        class=".helpers_application.nsp_bulk_action"
        permission="cmf.ManagePortal"
        />

    <browser:page
        name="list_ldap_info"
        for="OFS.interfaces.IApplication"
        class=".helpers_application.list_ldap_info"
        permission="zope2.ViewManagementScreens"
        />

</configure>

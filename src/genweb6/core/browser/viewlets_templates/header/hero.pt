<tal:hero tal:define="pref_lang context/@@genweb.utils/pref_lang;
                      header_config context/@@genweb.utils/genwebHeaderConfig;
                      heroImage view/getHeroHeader;
                      style view/style">

    <div id="hero" tal:attributes="class style"
         tal:define="is_new_style python:style == 'new-style'">

        <img alt="" title="" tal:condition="python:heroImage and style != 'content-style'"
             tal:attributes="src heroImage/src;
                             alt heroImage/alt;
                             title heroImage/title"></img>

        <h1 tal:condition="not:is_new_style">
            <tal:block tal:replace="structure python:getattr(header_config, 'html_title_' + pref_lang, '')"></tal:block>
        </h1>

        <div tal:condition="is_new_style" role="heading" aria-level="1">
            <h1><tal:block tal:replace="structure python:getattr(header_config, 'html_title_' + pref_lang, '')"></tal:block></h1>
            <div class="line"></div>
            <h2><tal:block tal:replace="structure python:getattr(header_config, 'html_description_' + pref_lang, '')"></tal:block></h2>
        </div>

    </div>

</tal:hero>

<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="genweb">

  <i18n:registerTranslations directory="locales" />

  <!--
    Be careful if you use general includeDependencies, it can have side effects!
    Better import explicit packages or configurations ;)
  -->
  <!--<includeDependencies package="." />-->

  <include package=".browser" />

  <include file="behaviors.zcml" />
  <include file="permissions.zcml" />

  <genericsetup:registerProfile
      name="default"
      title="genweb5.core"
      directory="profiles/default"
      description="Installs the genweb5.core add-on."
      provides="Products.GenericSetup.interfaces.EXTENSION"
      post_handler=".setuphandlers.post_install"
      />

  <genericsetup:registerProfile
      name="uninstall"
      title="genweb5.core (uninstall)"
      directory="profiles/uninstall"
      description="Uninstalls the genweb5.core add-on."
      provides="Products.GenericSetup.interfaces.EXTENSION"
      post_handler=".setuphandlers.uninstall"
      />

  <utility
      factory=".setuphandlers.HiddenProfiles"
      name="genweb5.core-hiddenprofiles"
      />

  <!-- -*- extra stuff goes here -*- -->

  <adapter
      for="zope.interface.Interface"
      provides=".adapters.important.IImportant"
      factory=".adapters.important.ImportantMarker"
      />

  <adapter factory=".adapters.important.importantIndexer" name="is_important" />

  <adapter
      for="plone.app.contenttypes.interfaces.ILink"
      provides=".behaviors.openlinkin.IOpenLinkInNewWindow"
      factory=".behaviors.openlinkin.OpenLinkInNewWindow"
      />

  <adapter factory=".behaviors.openlinkin.open_link_in_new_window" name="open_link_in_new_window" />

  <!-- The utilities browser view (can't be a grok view) -->
  <browser:page
      for="*"
      name="genweb.utils"
      class=".utils.genwebUtils"
      permission="zope2.Public"
      allowed_interface=".interfaces.IGenweb5CoreLayer"
      />

</configure>
